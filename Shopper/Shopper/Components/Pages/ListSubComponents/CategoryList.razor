@using Shopper.Services.Components.Dtos

<ul class="space-list">
    @if (Items != null && Items.Any())
    {
        @foreach (var item in Items)
        {
            <li class="space-list-item @(item.InCart ? "in-cart" : "")">
                <div class="item-info">
                    <span class="item-name">@item.Name</span>

                    @if (!string.IsNullOrWhiteSpace(item.Genre))
                    {
                        <span class="item-genre">(@item.Genre)</span>
                    }

                    @if (!string.IsNullOrWhiteSpace(item.Description))
                    {
                        <span class="item-description">(@item.Description)</span>
                    }

                    @if (!string.IsNullOrWhiteSpace(item.Price))
                    {
                        <span class="item-price">$ @item.Price</span>
                    }

                    @if (!string.IsNullOrWhiteSpace(item.Amount))
                    {
                        <span class="item-amount">x @item.Amount</span>
                    }
                </div>

                <div class="item-actions">
                    @if (item.InCart)
                    {
                        <button class="space-btn move" @onclick="() => MoveItemFromCart.InvokeAsync(item)">
                            Move from cart
                        </button>
                    }
                    else
                    {
                        <button class="space-btn submit" @onclick="() => SubmitItem.InvokeAsync(item)">
                            Move to cart
                        </button>
                    }

                    <button class="space-btn remove" @onclick="() => RemoveItem.InvokeAsync(item)">
                        Remove item
                    </button>
                </div>
            </li>
        }
    }
    else
    {
        <li class="empty-message">No items available</li>
    }
</ul>


<style>
    .space-list {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .space-list-item {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        padding: 1rem;
        border-radius: 14px;
        border: 1px solid rgba(var(--accent-rgb),0.25);
        background-color: var(--panel-color);
        box-shadow: 0 0 12px rgba(var(--neon-rgb),0.15);
        transition: transform 0.18s ease, box-shadow 0.18s ease;
    }

    .space-list-item:hover {
        transform: translateY(-3px);
        box-shadow: 0 0 16px rgba(var(--neon-rgb),0.25);
    }

    .space-list-item.in-cart {
        border-color: rgba(255,180,80,0.6);
        background-color: var(--panel-selected-color);
    }

    .item-info {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
        flex: 1;
    }

    .item-name {
        font-size: 1.1rem;
        font-weight: 700;
        color: var(--neon);
        text-shadow: 0 0 6px var(--teal);
    }

    .item-genre,
    .item-description,
    .item-price,
    .item-amount {
        font-size: 0.85rem;
        color: var(--muted);
    }

    .item-price {
        font-weight: 600;
        color: var(--starlight);
    }

    .item-amount {
        font-weight: 600;
        color: var(--accent);
    }

    .item-actions {
        display: flex;
        flex-direction: column; /* mobile-friendly */
        gap: 0.5rem;
        margin-left: 1rem;
    }

    .space-btn {
        border-radius: 8px;
        font-weight: 600;
        color: #fff;
        border: none;
        box-shadow: none;
        padding: var(--btn-padding-vertical) var(--btn-padding-horizontal);
        font-size: var(--btn-font-size-md);
        text-transform: uppercase;
        transition: background 0.2s ease, transform 0.2s ease;
    }

    .space-btn:hover {
        transform: scale(1.05);
    }

    .space-btn.submit {
        background: linear-gradient(135deg, var(--submit-start), var(--submit-end));
    }

    .space-btn.move {
        background: linear-gradient(135deg, var(--move-start), var(--move-end));
    }

    .space-btn.remove {
        background: linear-gradient(135deg, var(--remove-start), var(--remove-end));
    }

    .space-btn:disabled {
        background: rgba(80,80,120,0.4);
        color: #aaa;
        cursor: not-allowed;
    }

    .empty-message {
        text-align: center;
        color: var(--muted);
        font-style: italic;
        padding: 1rem;
    }
</style>

@code {
    [Parameter] public IEnumerable<ItemDto>? Items { get; set; }

    [Parameter] public EventCallback<ItemDto> SubmitItem { get; set; }
    [Parameter] public EventCallback<ItemDto> MoveItemFromCart { get; set; }
    [Parameter] public EventCallback<ItemDto> RemoveItem { get; set; }
}
