@using Shopper.Services.Components.Dtos

<ul class="space-list">
    @if (Items != null && Items.Any())
    {
        @foreach (var item in Items)
        {
            <li class="space-list-item @(item.InCart ? "in-cart" : "")" style="background-color: var(--panel-color);">
                <div class="item-info">
                    <span class="item-name">@item.Name</span>
                    <span class="item-genre">(@item.Genre)</span>
                </div>

                <div class="item-actions">
                    @if (item.InCart)
                    {
                        <button class="space-btn move" style="padding: var(--btn-padding-vertical) var(--btn-padding-horizontal); font-size: var(--btn-font-size-md);" @onclick="() => MoveItemFromCart.InvokeAsync(item)">
                            Move from cart
                        </button>
                    }
                    else
                    {
                        <button class="space-btn submit" style="padding: var(--btn-padding-vertical) var(--btn-padding-horizontal); font-size: var(--btn-font-size-md);" @onclick="() => SubmitItem.InvokeAsync(item)">
                            Move to cart
                        </button>
                    }

                    <button class="space-btn remove" style="padding: var(--btn-padding-vertical) var(--btn-padding-horizontal); font-size: var(--btn-font-size-md);" @onclick="() => RemoveItem.InvokeAsync(item)">
                        Remove item
                    </button>
                </div>
            </li>
        }
    }
    else
    {
        <li class="empty-message">No items available</li>
    }
</ul>

<style>
    /* Cosmic background for the list */
    .space-list {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    /* Each item card looks like a panel */
    .space-list-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem;
        border-radius: 14px;
        border: 1px solid rgba(var(--accent-rgb),0.3);
        transition: all 0.18s ease;
    }

        .space-list-item:hover {
            transform: translateY(-3px);
        }

        /* Cart items highlight differently */
        .space-list-item.in-cart {
            border-color: rgba(255,180,80,0.5);
            background-color: var(--panel-selected-color);
        }

    /* Item info */
    .item-info {
        display: flex;
        flex-direction: column;
    }

    .item-name {
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--starlight); /* starlight blue */
    }

    .item-genre {
        font-size: 0.85rem;
        color: var(--muted);
    }

    /* Actions area */
    .item-actions {
        display: flex;
        gap: 0.4rem;
    }

    /* Button variants simplified (no large shadows) */
    .space-btn {
        border-radius: 8px;
        font-weight: 600;
        color: #fff;
        border: none;
        box-shadow: none; /* removed */
    }

    .space-btn.submit { background: var(--primary); }
    .space-btn.move { background: var(--move-start); }
    .space-btn.remove { background: var(--remove-start); }

    /* Disabled state */
    .space-btn:disabled {
        background: rgba(80,80,120,0.4);
        color: #aaa;
        cursor: not-allowed;
    }

    /* Empty message */
    .empty-message {
        text-align: center;
        color: var(--muted);
        font-style: italic;
        padding: 1rem;
    }

</style>

@code {

    [Parameter] public IEnumerable<ItemDto>? Items { get; set; }

    [Parameter] public EventCallback<ItemDto> SubmitItem { get; set; }
    [Parameter] public EventCallback<ItemDto> MoveItemFromCart { get; set; }
    [Parameter] public EventCallback<ItemDto> RemoveItem { get; set; }
}
